{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "EMAIL_USER": "@email_user",
    "EMAIL_PASS": "@email_pass",
    "NEXT_PUBLIC_FRONTEND_URL": "https://trade-auction.vercel.app"
  },
  "build": {
    "env": {
      "MONGODB_URI": "@mongodb_uri",
      "EMAIL_USER": "@email_user",
      "EMAIL_PASS": "@email_pass"
    }
  }
}
